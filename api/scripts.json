{
  "$schema": "https://deno.land/x/denon/schema.json",
  "allow": ["net", "env", "read", "write"],
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "unstable": true,
      "desc": "run server",
      "env": { "ENV": "development" },
      "watch": true,
      "lock": "lock.json"
    },

    "test": {
      "cmd": "deno test",
      "desc": "Test the server.",
      "unstable": true,
      "env": { "ENV": "test" },
      "watch": false,
      "lock": "lock.json"
    },

    "prod": {
      "cmd": "deno run app.bundle.js",
      "desc": "Run the server.",
      "unstable": true,
      "env": { "ENV": "production" },
      "watch": false,
      "lock": "lock.json"
    },

    "fmt": {
      "cmd": "deno fmt",
      "desc": "Format the code.",
      "allow": [],
      "watch": false
    },

    "lint": {
      "cmd": "deno lint",
      "desc": "Code linter for JavaScript and TypeScript",
      "unstable": true,
      "watch": false,
      "allow": []
    }
  },

  "logger": {
    "fullscreen": true,
    "quiet": false,
    "debug": true
  },

  "watcher": {
    "skip": ["*/.git/*", "*/.idea/*", "*/.vscode/*", "*/.env/*", "*/requests"]
  }
}
